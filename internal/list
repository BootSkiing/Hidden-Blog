#!/usr/bin/env bash

source internal/globals.sh

if [[ "$@" != "" ]]
then
	search_posts "$@" |\
	while read FILE
	do
		pretty_print_post_info "${FILE}"
	done
else
	find "${POST_DIR}" -type f -name "*${SEARCH_VALUE}*.${POST_EXTENSION}" -print0 |\
	sort_by_date |\
	while read FILE
	do
		pretty_print_post_info "${FILE}"
	done
fi
exit 0
